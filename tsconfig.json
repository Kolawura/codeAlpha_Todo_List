{
  "compilerOptions": {
    "target": "ES6",      // Specify ECMAScript target version: 'ES5', 'ES6', etc.
    "module": "commonjs", // Specify module code generation: 'commonjs', 'es6', etc.
    "strict": true,       // Enable all strict type-checking options
    "esModuleInterop": true,  // Enable interoperability between CommonJS and ES modules
    "outDir": "./dist",   // Specify output directory for compiled files
    "rootDir": "./src"    // Specify input source directory
  },
  "include": ["src"]      // Specify the source files to include
}