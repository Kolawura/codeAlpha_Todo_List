{
  "compilerOptions": {
    "target": "ESNext",      // Use ESNext for modern JS features.
    "module": "ESNext",      // Use ES modules for frontend projects.
    "strict": true,          // Enable strict type-checking.
    "esModuleInterop": true, // Enable compatibility between CommonJS and ES modules.
    "outDir": "./dist",      // Output directory for compiled files.
    "rootDir": "./src",      // Input source directory.
    "sourceMap": true,       // Enable source maps for debugging.
    "lib": ["DOM", "ESNext"] // Target the DOM and latest ECMAScript features.
  },
  "include": ["src"]          // Include the "src" directory.
}
